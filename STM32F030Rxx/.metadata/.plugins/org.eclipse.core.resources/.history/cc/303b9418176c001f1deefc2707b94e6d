	uint8_t   IDR;
	uint8_t   ODR;
	uint32_t  BSRR;
	uint8_t   LCKR;
	uint8_t   AFR[2];
	uint8_t   BRR;
}GPIO_Reg_t;
*/
#endif /* STM32F030R8_H_ */
